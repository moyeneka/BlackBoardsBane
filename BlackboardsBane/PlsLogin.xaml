<Window x:Class="BlackboardsBane.PlsLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackboardsBane"
        mc:Ignorable="d"
        Title="Log into Blackboard" Height="120" Width="300" Loaded="Window_Loaded">
    <Grid>
        <TextBlock Name="signingIn" Visibility="Visible">
            Checking if you're logged in...<LineBreak/>
            Please wait.
        </TextBlock>
        <TextBlock Name="signInPls" Visibility="Hidden">
            To use BBB, you'll need to sign in<LineBreak/>
            with your uark account.
        </TextBlock>
        <Grid Margin="0,42,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Sign in" IsEnabled="False" Name="signInBtn" Click="signInBtn_Click" Margin="20 0 10 10"/>
            <Button Grid.Column="1" Content="Cancel" IsEnabled="False" Name="cancelBtn" Margin="0 0 20 10"/>
        </Grid>
    </Grid>
</Window>
