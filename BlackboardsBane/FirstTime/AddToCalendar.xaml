<Page x:Class="BlackboardsBane.FirstTime.AddToCalendar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BlackboardsBane.FirstTime"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddToCalendar">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Name="infoLabel">
            Would you like to connect your schedule with Google Calendar?
        </TextBlock>
        <Button Grid.Row="1" Grid.Column="0" Name="addCalendarBtn" Content="Add assignments to calendar now" Click="addCalendarBtn_Click"/>
        <Button Grid.Row="1" Grid.Column="1" Name="skipBtn" Content="Skip adding assignments to calendar" Click="skipBtn_Click"/>
    </Grid>
</Page>
